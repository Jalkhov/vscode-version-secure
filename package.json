{
  "name": "version-secure",
  "displayName": "Version Secure",
  "description": "Monitorea y verifica coherencia de versiones entre archivos de proyecto",
  "version": "1.0.2",
  "icon": "icon.png",
  "publisher": "jalkhov",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jalkhov/vscode-version-secure.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "version",
    "versioning",
    "sync",
    "check"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "versionChecker.check",
        "title": "Check Versions",
        "icon": "$(sync)"
      },
      {
        "command": "versionChecker.showDetails",
        "title": "Show Details",
        "icon": "$(list-unordered)"
      },
      {
        "command": "versionChecker.toggle",
        "title": "Toggle Version Checker",
        "icon": "$(eye)"
      }
    ],
    "configuration": {
      "title": "Version Checker",
      "properties": {
        "versionChecker.enabled": {
          "type": [
            "boolean",
            "null"
          ],
          "default": null,
          "description": "Habilitar/deshabilitar para este workspace (null = auto, true/false = forzado)"
        },
        "versionChecker.files": {
          "type": "object",
          "default": {},
          "description": "Archivos a monitorear: {\"archivo.ext\": {\"patterns\": [\"regex\"]}}"
        },
        "versionChecker.checkOnSave": {
          "type": "boolean",
          "default": true
        },
        "versionChecker.checkInterval": {
          "type": "number",
          "default": 0
        },
        "versionChecker.statusBarPriority": {
          "type": "number",
          "default": 1000
        }
      }
    }
  }
}
